                        <option value="Paper">Paper</option>
                        <option value="Scissors">Scissors</option>
                    </select>
                </div>

                <div class='form-group'>
                    <label for="player2">Player 2 Weapon</label>
                    <select name="player2">
                        <option value="Rock">Rock</option>
                        <option value="Paper">Paper</option>
                        <option value="Scissors">Scissors</option>
                    </select>
                </div>
                <input type="submit">
            </form>
        </div>
    </body>
